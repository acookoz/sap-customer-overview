<mvc:View controllerName="zcustoview.controller.FactSheet" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:semantic="sap.m.semantic"
	xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<semantic:FullscreenPage id="page" navButtonPress="onNavBack" showNavButton="true" title="{i18n>factSheetViewTitle}"
		busy="{factSheetView>/busy}" busyIndicatorDelay="{factSheetView>/delay}">
		<ObjectHeader title="{factSheetView>/accountDetailsTitle}"></ObjectHeader>
		<semantic:content>
			<f:SimpleForm columnsL="2" columnsM="2" editable="true" emptySpanL="0" emptySpanM="0" adjustLabelSpan="false" id="modifyCustomerForm1"
				labelSpanL="4" labelSpanM="12" layout="ResponsiveGridLayout" backgroundDesign="Solid">
				<f:content>
					<core:Title text="{i18n>factSheetContactTitle}"/>
					<Label id="labelTitle" text="{i18n>labelCreateTitle}"/>
					<Select id="selTitle" selectedKey="{title}" items="{path: 'titles>/'}" enabled="false">
						<core:Item text="{titles>title}" key="{titles>title}"/>
					</Select>
					<Label id="labelAccount" text="{i18n>labelCreateAccountName}"/>
					<Input id="AccountName" value="{name}" maxLength="40" editable="false"/>
					<Label id="labelTelephone" text="{i18n>labelSearchTelephone}"/>
					<Input id="telephone" value="{telephone}" maxLength="16" editable="false"/>
					<Label id="labelMobile" text="{i18n>labelCreateMobile}"/>
					<Input id="mobile" value="{mobile}" maxLength="16" editable="false"/>
					<Label id="labelEmail" text="{i18n>labelSearchEmail}"/>
					<Input id="email" value="{email}" maxLength="255" editable="false"/>
					<core:Title text="{i18n>factSheetAddressTitle}"/>
					<Label id="labelStreet" text="{i18n>labelSearchStreet}"/>
					<Input id="street" value="{street}" maxLength="60" editable="false"/>
					<Label id="labelCity" text="{i18n>labelSearchCity}"/>
					<Input id="city" value="{city}" maxLength="25" editable="false"/>
					<Label id="labelPostcode" text="{i18n>labelCreatePostcode}"/>
					<Input id="postcode" value="{postcode}" maxLength="10" editable="false"/>
					<Label id="labelRegion" text="{i18n>labelCreateRegion}"/>
					<Select id="selRegion" selectedKey="{region}" enabled="false" items="{path: 'regions>/'}">
						<core:Item text="{regions>name}" key="{regions>key}"/>
					</Select>
					<Label id="labelCountry" text="{i18n>labelSearchCountry}"/>
					<Select id="selCountry" selectedKey="{country}" change="onCountrySelect" items="{path: 'countries>/'}" enabled="false">
						<core:Item text="{countries>name}" key="{countries>key}"/>
					</Select>
				</f:content>
			</f:SimpleForm>
			
			<Table id="rmaDocumentsTable" width="auto" class="sapUiResponsiveMargin" noDataText="{i18n>noRmaDocumentsText}"
				busyIndicatorDelay="{searchView>/tableBusyDelay}" growing="true" growingScrollToLoad="true" fixedLayout="false"
				updateFinished="onUpdateFinished" items="{ path: 'ToRmaDocuments' }">
				<headerToolbar>
					<Toolbar>
						<Title id="tableHeader" text="{factSheetView>/rmaDocumentsTitle}"/>
						<ToolbarSpacer/>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column id="colRmaDocumentId">
						<Text text="{i18n>colRmaDocumentId}" id="colRmaDocumentIdHeader"/>
					</Column>
					<Column id="colRmaStatus">
						<Text text="{i18n>colRmaStatus}" id="colRmaStatusHeader"/>
					</Column>					
					<Column id="colRmaSalesOrder">
						<Text text="{i18n>colRmaSalesOrder}" id="colRmaSalesOrderHeader"/>
					</Column>
					<Column id="colRmaDelivery">
						<Text text="{i18n>colRmaDelivery}" id="colRmaDeliveryHeader"/>
					</Column>
					<Column id="colRmaBillingDocument">
						<Text text="{i18n>colRmaBillingDocument}" id="colRmaBillingDocumentHeader"/>
					</Column>
					<Column id="colRmaDateCompleted">
						<Text text="{i18n>colRmaDateCompleted}" id="colRmaDateCompletedHeader"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem type="Navigation" press="onRmaDocumentSelect">
						<cells>
							<ObjectIdentifier title="{description} ({documentId})" id="rmaId"/>
							<Text text="{status}" id="rmaStatus"/>
							<Text text="{salesOrder}" id="rmaSalesOrder"/>
							<Text text="{delivery}" id="rmaDelivery"/>
							<Text text="{billingDocument}" id="rmaBillingDocument"/>
							<Text text="{dateCompleted}" id="rmaDateCompleted"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</semantic:content>
	</semantic:FullscreenPage>
</mvc:View>